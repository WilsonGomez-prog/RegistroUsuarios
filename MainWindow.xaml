<Window x:Class="RegistroUsuarios.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistroUsuarios"
        mc:Ignorable="d"
        Title="Ventana principal" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu>
            <MenuItem Header="Registro">
                <MenuItem x:Name="rUsuariosMenuItem" Header="Registro de Usuarios" Click="rUsuariosMenuItem_Click"/>
            </MenuItem>

            <MenuItem Header="Consulta">
                <MenuItem x:Name="cUsuariosMenuItem" Header="Consulta de Usuarios" Click="cUsuariosMenuItem_Click" />
            </MenuItem>

            <MenuItem Header="Ayuda">
                <MenuItem x:Name="SalirMenuItem" Header="Cerrar sesión" Click="SalirMenuItem_Click" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
